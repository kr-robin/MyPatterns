#include <iostream>
using namespace std;
int main()
{
    int h;
    cout << "Enter the height" <<endl;
    cin>>h;
    
    for(int i=1; i<=h; i++)
	{
        for(int j=i; j<=h; j++)
		{ 
        cout<<" ";
        }
    for(int j=1; j<2*i; j++){
            if(i==h || (j==1 || j==2*i-1)){
                cout<<"*";
            }
            else cout<<" ";
    }
    cout<<endl;
    }
    return 0;
}
